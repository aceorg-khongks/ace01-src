apiVersion: appconnect.ibm.com/v1beta1
kind: IntegrationServer
metadata:
  name: ${NAME}
  namespace: ${NAMESPACE}
spec:
  license:
    accept: true
    license: ${LICENSE}
    use: ${USE}
  pod:
    containers:
      runtime:
        image: image-registry.openshift-image-registry.svc:5000/ace01-ci/${NAME}:${APP_VERSION}
        resources:
          limits:
            cpu: 300m
            memory: 350Mi
          requests:
            cpu: 300m
            memory: 300Mi
  adminServerSecure: true
  enableMetrics: true
  createDashboardUsers: true
  configurations: [ ${CONFIGURATIONS} ]
  router:
    timeout: 120s
  designerFlowsOperationMode: disabled
  service:
    endpointType: http
  version: ${VERSION}
  replicas: 1
  logFormat: basic